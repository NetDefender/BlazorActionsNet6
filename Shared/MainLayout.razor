@inherits LayoutComponentBase

<Layout Style="min-height: 100vh;background-color:white">
    <Sider Collapsible Collapsed=@_collapsed OnCollapse=@OnCollapse>
        <div class="logo" />
        <Menu Theme="MenuTheme.Dark" DefaultSelectedKeys=@(new[]{"1"}) Mode="MenuMode.Inline">
            @{
                RenderFragment fragProficiencies =
                    @<span>
                        <Icon Type="sketch" Theme="outline"/>
                        <span>Proficiencies</span>
                    </span>;
            }
            <SubMenu Key="keyProficiencies" TitleTemplate=fragProficiencies>
                <MenuItem Key="keyProficienciesProgrammingLanguages" RouterLink="ProgrammingLanguages">
                    <Icon Type="code" Theme="outline"/>
                    <span>Languages</span>
                </MenuItem>
                <MenuItem Key="keyProficienciesDatabases" RouterLink="Databases">
                    <Icon Type="database" Theme="outline"/>
                    <span>Databases</span>
                </MenuItem>
                <MenuItem Key="keyProficienciesCompetenciasSourceControl" RouterLink="SourceControl">
                    <Icon Type="github" Theme="outline"/>
                    <span>GIT CI/CD</span>
                </MenuItem>
                 <MenuItem Key="keyProficienciesFrameworksLibraries" RouterLink="Frameworks">
                    <Icon Type="tool" Theme="outline"/>
                    <span>Frameworks</span>
                </MenuItem>
            </SubMenu>

            @{
                RenderFragment fragLanguages =
                    @<span>
                        <Icon Type="flag" Theme="outline"/>
                        <span>Languages</span>
                    </span>;
            }
            <SubMenu Key="keyLanguages" TitleTemplate=fragLanguages>
                <MenuItem Key="keyStudySpanish" RouterLink="Spanish">
                    <Icon Type="taobao" Theme="outline"/>
                    <span>Spanish</span>
                </MenuItem>
                <MenuItem Key="keyStudyEnglish" RouterLink="English">
                    <Icon Type="alipay" Theme="outline"/>
                    <span>English</span>
                </MenuItem>
            </SubMenu>
            <MenuItem Key="keyContact" RouterLink="Contact">
                <Icon Type="idcard" Theme="outline" Spin/>
                <span>Contact</span>
            </MenuItem>
        </Menu>
    </Sider>
    <Layout Class="site-layout" style="margin:50px;background-color:white">
        <Content >
            @Body
        </Content>
    </Layout>
</Layout>